@model services.Models.ViewModels.OrderModel
@{
    Layout = "~/Views/Layouts/ModalLayout.cshtml";
}

@section Styles {
    <link href="~/css/order.css" rel="stylesheet" />
}

<div class="service">
    <div class="imgbox">
        <img src="~/img/services/@Model.Service.Image" />
    </div>
    <p class="title">@Model.Service.Name</p>
    <p class="requirements">@Model.Service.Requirements</p>
</div>

<form>
    <input class="service-id" value="@Model.Service.Id" readonly />

    <div class="row">
        <p>Опишите заказ</p>
        <span class="error"></span>
        <textarea placeholder="Пожалуйста, придерживайтесь указанного шаблона"></textarea>
    </div>

    <div class="row">
        <p>Как с вами связаться</p>
        <span class="error"></span>
        <input placeholder="Например, Telegram &#64;rtxdiv_production">
    </div>

    <button type="submit">Отправить</button>
</form>