@model services.Models.ViewModels.OrderModel
@{
    Layout = "~/Views/Layouts/ModalLayout.cshtml";
}

@section Styles {
    <link href="~/css/order.css" rel="stylesheet" />
}

<div class="service">
    <div class="imgbox">
        <img src="~/img/services/@Model.Service.Image" />
    </div>
    <p class="title">@Model.Service.Name</p>
    <p class="requirements">@Model.Service.Requirements</p>
</div>

<div class="form">

    <input id="serviceId" value="@Model.Service.Id" readonly />

    <div class="error" data-error="All"></div>

    <div class="row">
        <p>Опишите заказ</p>
        <div class="error" data-error="Query"></div>
        <textarea placeholder="Пожалуйста, придерживайтесь указанного шаблона" id="queryInp"></textarea>
        <div id="queryLength"></div>
    </div>

    <div class="row">
        <p>Как с вами связаться</p>
        <div class="error" data-error="Contact"></div>
        <input placeholder="Например, Telegram &#64;rtxdiv_production" id="contactInp">
    </div>

    <button onclick="sendForm()">Отправить</button>
</div>

@section Scripts {
    <script src="~/js/order.js"></script>
}